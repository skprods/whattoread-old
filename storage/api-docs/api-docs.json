            "CollectionResource": {
                "description": "Коллекция записей",
                "properties": {
                    "success": {
                        "description": "Успешный ли ответ",
                        "type": "boolean",
                        "example": "true"
                    },
                    "pagination": {
                        "description": "Пагинация",
                        "properties": {
                            "per_page": {
                                "description": "Количество записей на страницу",
                                "type": "integer",
                                "example": "30"
                            },
                            "total": {
                                "description": "Всего записей",
                                "type": "integer",
                                "example": "120"
                            },
                            "current_page": {
                                "description": "Текущая страница",
                                "type": "integer",
                                "example": "3"
                            },
                            "first_page": {
                                "description": "Первая страница",
                                "type": "integer",
                                "example": "1"
                            },
                            "last_page": {
                                "description": "Последняя страница",
                                "type": "integer",
                                "example": "4"
                            },
                            "prev_page": {
                                "description": "Предыдущая страница",
                                "type": "integer",
                                "example": "2"
                            },
                            "next_page": {
                                "description": "Следующая страница",
                                "type": "integer",
                                "example": "4"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "BookResource": {
                "description": "Ресурс книги",
                "type": "object",
                "allOf": [
                    {
                        "properties": {
                            "data": {
                                "properties": {
                                    "id": {
                                        "description": "Индетификатор книги",
                                        "type": "integer",
                                        "example": "1"
                                    },
                                    "title": {
                                        "description": "Название книги",
                                        "type": "string",
                                        "example": "Капитанская дочка"
                                    },
                                    "author": {
                                        "description": "Автор книги",
                                        "type": "string",
                                        "example": "Алексанлр Пушкин"
                                    },
                                    "description": {
                                        "description": "Описание книги",
                                        "type": "string",
                                        "example": "Длинное или не очень описание книги"
                                    },
                                    "isbn": {
                                        "description": "ISBN-код книги",
                                        "type": "string",
                                        "example": "978-5-00116-601-6"
                                    },
                                    "words_count": {
                                        "description": "Количество слов в книге",
                                        "type": "integer",
                                        "example": "104000"
                                    },
                                    "therms_count": {
                                        "nullable": true,
                                        "description": "Количество отобранных терминов в словнике",
                                        "type": "integer",
                                        "example": "23500"
                                    },
                                    "status": {
                                        "description": "Статус книги",
                                        "type": "string",
                                        "enum": [
                                            "moderation",
                                            "approved"
                                        ],
                                        "example": "moderation"
                                    },
                                    "genres": {
                                        "type": "array",
                                        "items": {
                                            "$ref": "#/components/schemas/GenreResource/allOf/0/properties/data"
                                        }
                                    },
                                    "created_at": {
                                        "description": "Дата создания",
                                        "type": "datetime",
                                        "example": "2021-01-01 10:00:00"
                                    },
                                    "updated_at": {
                                        "description": "Дата последнего обновления",
                                        "type": "datetime",
                                        "example": "2021-01-01 10:00:00"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    },
                    {
                        "$ref": "#/components/schemas/SingleResource"
