                                            "name": {
                                                "description": "Название",
                                                "type": "string",
                                                "example": "Дочерний жанр"
                                            },
                                            "status": {
                                                "description": "Статус",
                                                "type": "string",
                                                "enum": [
                                                    "moderation",
