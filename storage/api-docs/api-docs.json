            "UnauthorizedException": {
                "description": "Ошибка авторизации",
                "properties": {
                    "success": {
                        "description": "Успешный ли ответ",
                        "type": "boolean",
                        "example": "false"
                    },
                    "error": {
                        "properties": {
                            "code": {
                                "description": "Код ошибки",
                                "type": "integer",
                                "example": "401"
                            },
                            "message": {
                                "type": "string",
                                "example": "Время действия токена истекло."
